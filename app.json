{
  "name": "Spring PetClinic",
  "description": "An example Java Spring app that can easily be deployed to Heroku.",
  "addons": [ "heroku-postgresql" ],
  "logo": "https://github.com/kissaten/spring-petclinic/raw/master/src/main/resources/static/resources/images/pets.png",
  "env": {
    "JAVA_OPTS": {
      "value": "-Dspring.profiles.active=postgresql"
    }
  },
  "environments": {
    "test": {
      "env": {
        "JAVA_OPTS": {
          "value": "-Dspring.profiles.active=postgresql"
        }
      }
    }
  }
}
